{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react", 
    "strict": true, 
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "build",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}